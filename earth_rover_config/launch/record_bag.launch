<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="joystick_linear_scale"   value="0.65" />
    <arg name="joystick_angular_scale"   value="2.0" />

    <include file="$(find earth_rover_chassis)/launch/earth_rover_chassis.launch"></include>
    <include file="$(find earth_rover_teleop)/launch/earth_rover_teleop.launch"></include>

    <include file="$(find earth_rover_config)/launch/sensors.launch"></include>

    <node pkg="rosbag" type="record" name="rosbag_record_cam"
       args="record -o $(find earth_rover_config)/bags/bag   /zed/point_cloud/cloud_registered   /rplidar/scan   /earth_rover/left   /earth_rover/right   "/>
</launch>
